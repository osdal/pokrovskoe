function _flatclassifieds_install_tasks() {
  $operations = array();
  $operations[] = array('_flatclassifieds_install_task_1', array());
  $batch = array(
    'title' => t('Installing FlatClassifieds'),
    'operations' => $operations
  );
  return $batch;
}

function _flatclassifieds_install_task_1() {
  $sql_file = dirname(__FILE__).'/site.sql';
  $count = _wr_profile_import_sql($sql_file);
    $name = db_select('system', 's')->fields('s', array('name'))->condition('s.name', 'flatclassifieds')->condition('s.type', 'module')->execute()->fetchField();
  if ($name == 'flatclassifieds') {
    db_update('system')->condition('name', 'flatclassifieds')->condition('type', 'module')->fields(array('status' => 1))->execute();
  } else {
    db_query(_wr_profile_prefixTables("INSERT INTO `prefixflcl_system` (`filename`, `name`, `type`, `owner`, `status`, `bootstrap`, `schema_version`, `weight`, `info`) VALUES ('profiles/flatclassifieds/flatclassifieds.profile', 'flatclassifieds', 'module', '', 1, 0, 0, 1000, X'');"));
  }
}
